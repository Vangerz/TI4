<Page x:Class="GameUI.Visible.Pages.Page_MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameUI.Visible.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_MainMenu">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Start New Game" Click="StartNewGame_Click" Width="200" Height="40"/>
        <Button Content="Load Saved Game" Click="LoadSavedGame_Click" Width="200" Height="40"/>
        <Button Content="Create Custom Scenario" Click="CreateCustomScenario_Click" Width="200" Height="40"/>
        <Button Content="Create Custom Objects" Click="CreateCustomObjects_Click" Width="200" Height="40"/>
        <Button Content="Settings" Click="Settings_Click" Width="200" Height="40"/>
        <Button Content="Exit" Click="Exit_Click" Width="200" Height="40"/>
    </StackPanel>
</Page>
